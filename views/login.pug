html
  head
    title Enter your credentials
body
  if strategies
    div
      each strategy in strategies
        p
          a(href=`/login/${strategy}`) Login using #{strategy}
  form(method='post')
    div
      label Username:
      input(type='text' name='username')
    div
      label Password:
      input(type='password' name='password')
    div
      input(type='submit' value='Login')
